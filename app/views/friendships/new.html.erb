<p class="hidden price_per_hour"><%= @friend.price_per_hour %></p>
<%= simple_form_for [@friend, @friendship] do |f| %>
  <%= f.error_notification %>
  <div class="container-friend">
  <div class="form-inputs" style="width:50vw">
      <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>

      <%= f.label :start_hour %>
      <%= f.select :start_hour, 0..24 %>
      <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.label :end_hour %>
      <%= f.select :end_hour, 0..24 %>
      <br>
      <%= f.label :total_price, as: :hidden, class: " label" %>
      <%= f.input :total_price, as: :hidden, class: "total_price" %>
      <%= f.button :submit, "Go", class: "hidden submit-btn btn-primary" %>
      <hr>
  </div>
<% end %>
<button class="visuPrice">Visualize cost</button>
<h2 class="displayPrice"></h2>
</div>
